                   FontSize="Title"
                   Margin="10, 10, 10, 10"/>
        </StackLayout>
    </Shell.TitleView>-->
    <!--<Shell.TitleView>
        <Label Text="{Binding Title, FallbackValue='no value chief'}"
               VerticalOptions="Center"
               HorizontalOptions="End"
               FontSize="Large" />
    </Shell.TitleView>-->

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Title"
                     Order="Primary"
                     Text="Sip It"
                     Priority="0">
        </ToolbarItem>
        <ToolbarItem x:Name="Login"
                     Order="Primary"
                     Text="Login"
                     Priority="1">
        </ToolbarItem>
    </ContentPage.ToolbarItems>-->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding LoginText}"
                     Order="Primary"
                     Priority="0"
                     Command="{Binding LoginCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical">
            <!--<Image Source="{Binding BackgroundLogo}"
                   Aspect="Fill"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   Opacity="0.7" />-->

            <!--Carousel-->
                <StackLayout>
                    <CarouselView x:Name="mainCarousel"
                                  VerticalOptions="Start"
                                  HorizontalOptions="FillAndExpand"
                                  HeightRequest="350"
                                  Margin="10,10, 10, 0"
                                  BackgroundColor="White"
                                  Opacity="0.9"
                                  ItemsSource="{Binding mainCarousel}">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImageUrl}"
                                       Aspect="AspectFit"
                                       HeightRequest="300"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicatorView"
                                   IndicatorColor="{StaticResource SipItGreen}"
                                   SelectedIndicatorColor="{StaticResource SipItRed}"
                                   HorizontalOptions="Center" />
                </StackLayout>
            
            <!--The Usual card-->
            <yummy:PancakeView BackgroundColor="White"
                               BorderColor="{StaticResource SipItGreen}"
                               BorderThickness="6"
                               CornerRadius="5"
                               HorizontalOptions="FillAndExpand"
                               Margin="10, 10, 10, 10"
                               Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Text="Get the Usual"
                            Command="{Binding GetUsual}"
                            FontFamily="{StaticResource Righteous}"
                            TextColor="White"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource SipItRed}"
                            WidthRequest="225"
                            HeightRequest="40"
                            Margin="0, 5, 0, 5"
                            CornerRadius="5"
                            HorizontalOptions="CenterAndExpand"
                            Grid.ColumnSpan="2">
                    </Button>
                    <Button Text="Order"
                            FontFamily="{StaticResource Righteous}"
                            TextColor="White"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource SipItGreen}"
                            Command="{Binding OrderItem}"
                            Grid.Row="1"
                            WidthRequest="150"
                            HeightRequest="40"
                            Margin="0, 0, 7, 5"
                            CornerRadius="5"
                            HorizontalOptions="End">
                    </Button>
                    <Button Text="Menu"
                            TextColor="White"
                            FontFamily="{StaticResource Righteous}"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource SipItGreen}"
                            Command="{Binding SeeMenu}"
                            Grid.Row="1"
                            WidthRequest="150"
                            HeightRequest="40"
                            Margin="7, 0, 0, 5"
                            CornerRadius="5"
                            Grid.Column="1"
                            HorizontalOptions="Start">
                    </Button>
                </Grid>
            </yummy:PancakeView>

            <!--Menu-->
                <yummy:PancakeView BackgroundColor="White"
                                   BorderColor="{StaticResource SipItRed}"
                                   BorderThickness="6"
                                   CornerRadius="5"
                                   HorizontalOptions="FillAndExpand"
                                   HeightRequest="200"
                                   Margin="10, 10, 10, 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <BoxView BackgroundColor="{StaticResource SipItRed}"
                                 HeightRequest="35"
                                 HorizontalOptions="FillAndExpand"
                                 Grid.ColumnSpan="2">
                        </BoxView>
                        <Label Text="Recommended for you"
                               FontFamily="{StaticResource Righteous}"
                               FontSize="Medium"
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Grid.ColumnSpan="2"
                               VerticalOptions="Center">
                        </Label>
                        <CollectionView ItemsSource="{Binding Recommended}"
                                        Grid.Row="1"
                                        Margin="20,5,0,0"
                                        Grid.ColumnSpan="2">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"
                                                 HorizontalItemSpacing="0"
                                                 VerticalItemSpacing="0" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="7*" />
                                            <ColumnDefinition Width="3*" />
                                        </Grid.ColumnDefinitions>

                                        <Label Text="{Binding Name}"
                                               VerticalOptions="Start"
                                               FontAttributes="Bold"
                                               FontSize="Medium" />
                                        <CollectionView ItemsSource="{Binding Additions}"
                                                        Grid.Row="1"
                                                        Margin="0"
                                                        HeightRequest="50">
                                            <CollectionView.ItemsLayout>
                                                <GridItemsLayout Orientation="Horizontal"
                                                                 HorizontalItemSpacing="0"
                                                                 VerticalItemSpacing="0" />
                                            </CollectionView.ItemsLayout>
                                        </CollectionView>
                                        <Button Text="ADD"
                                                TextColor="White"
                                                BackgroundColor="{StaticResource SipItGreen}"
                                                Grid.RowSpan="2"
                                                Grid.Column="1"
                                                CornerRadius="20"
                                                Margin="0,0,20,0"
                                                HorizontalOptions="End"
                                                VerticalOptions="Start"
                                                HeightRequest="40"
                                                WidthRequest="50" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </yummy:PancakeView>                
            </StackLayout>            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>