<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             mc:Ignorable="d"
             x:Class="SipItApp.Views.MainPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Title"
                     Order="Primary"
                     Text="Sip It"
                     Priority="0">
        </ToolbarItem>
        <ToolbarItem x:Name="Login"
                     Order="Primary"
                     Text="Login"
                     Priority="1">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <!--Carousel-->
                <BoxView BackgroundColor="LightBlue"
                         VerticalOptions="Start"
                         HorizontalOptions="FillAndExpand"
                         HeightRequest="250"
                         Margin="10,10, 10, 0">
                </BoxView>
                
                <!--The Usual card-->
                <yummy:PancakeView BackgroundColor="Transparent"
                                   BorderColor="#02777C"
                                   BorderThickness="6"
                                   CornerRadius="5"                                   
                                   HorizontalOptions="FillAndExpand"
                                   Margin="10, 10, 10, 10"
                                   Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                            <ColumnDefinition Width="5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Text="Get the usual"
                                TextColor="White"
                                FontAttributes="Bold"
                                BackgroundColor="#F24741"
                                Command="{Binding GetUsual}"
                                Grid.ColumnSpan="2"
                                WidthRequest="225"
                                HeightRequest="40"
                                Margin="0, 5, 0, 5"
                                HorizontalOptions="CenterAndExpand">
                        </Button>
                        <Button Text="Order"
                                TextColor="White"
                                FontAttributes="Bold"
                                BackgroundColor="#02777C"
                                Command="{Binding OrderItem}"
                                Grid.Row="1"
                                WidthRequest="150"
                                HeightRequest="40"
                                Margin="0, 0, 7, 5"
                                HorizontalOptions="End">
                        </Button>
                        <Button Text="Menu"
                                TextColor="White"
                                FontAttributes="Bold"
                                BackgroundColor="#02777C"
                                Command="{Binding SeeMenu}"
                                Grid.Row="1"
                                WidthRequest="150"
                                HeightRequest="40"
                                Margin="7, 0, 0, 5"
                                Grid.Column="1"
                                HorizontalOptions="Start">
                        </Button>
                    </Grid>

                </yummy:PancakeView>
                
                <!--Menu-->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>